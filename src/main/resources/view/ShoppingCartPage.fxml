<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #1e1e2f;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.graphic.ShoppingCartController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0" style="-fx-border-color: #00d4ff; -fx-border-width: 0 0 2 0;">
            <padding><Insets left="30.0" /></padding>
            <children>
                <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-border-color: #00d4ff; -fx-border-radius: 10;" text="&lt; Continua lo Shopping" textFill="#00d4ff" />
                <Label text="Il Tuo Carrello" textFill="WHITE">
                    <font><Font name="System Bold" size="28.0" /></font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <TableView fx:id="cartTable" style="-fx-background-color: #2a2a3d; -fx-control-inner-background: #2a2a3d;">
            <columns>
                <TableColumn fx:id="colTitle" prefWidth="300.0" text="Videogioco" />
                <TableColumn fx:id="colPlatform" prefWidth="150.0" text="Piattaforma" />
                <TableColumn fx:id="colPrice" prefWidth="120.0" text="Prezzo" />
                <TableColumn fx:id="colAction" prefWidth="100.0" text="Rimuovi" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></BorderPane.margin>
        </TableView>
    </center>

    <right>
        <VBox prefWidth="280.0" spacing="20.0" style="-fx-background-color: #2a2a3d; -fx-background-radius: 20 0 0 20;">
            <padding><Insets bottom="30.0" left="25.0" right="25.0" top="40.0" /></padding>
            <children>
                <Label text="Riepilogo Ordine" textFill="WHITE">
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
                <Separator opacity="0.2" />
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Subtotale" textFill="#aaaaaa" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="subtotalLabel" text="€ 0.00" textFill="WHITE" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="IVA (incl.)" textFill="#aaaaaa" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="€ 0.00" textFill="WHITE" />
                    </children>
                </HBox>
                <Separator opacity="0.2" />
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="TOTALE" textFill="WHITE">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="totalLabel" text="€ 0.00" textFill="#00d4ff">
                            <font><Font name="System Bold" size="22.0" /></font>
                        </Label>
                    </children>
                </HBox>
                <Region VBox.vgrow="ALWAYS" />
                <Button maxWidth="Infinity" onAction="#handleCheckout" prefHeight="50.0" style="-fx-background-color: #00d4ff; -fx-background-radius: 15; -fx-cursor: hand;" text="PROCEDI AL PAGAMENTO" textFill="#1e1e2f">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Button>
            </children>
        </VBox>
    </right>
</BorderPane>
