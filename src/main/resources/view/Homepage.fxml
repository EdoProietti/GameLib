<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="30.0" style="-fx-background-color: #1e1e2f;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Graphic.HomeController">
    <children>
        <Label text="GameLib" textFill="#00d4ff">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>

        <Label text="La tua libreria dei sogni" textFill="WHITE">
            <font>
                <Font size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="-25.0" />
            </VBox.margin>
        </Label>

        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#handleSearch" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #00d4ff; -fx-background-radius: 20; -fx-cursor: hand;" text="Cerca Giochi">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleLogin" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 20; -fx-cursor: hand;" text="Login" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</VBox>